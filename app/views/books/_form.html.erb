<%= form_with model:book,local:true do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control book_title' %>
  </div>
  <div class="form-group">
    <%= f.label :opinion %>
    <%= f.text_area :body, class: 'form-control book_body' %>
  </div>
  <div class="form-group">
    <%= f.label :Tag %>
    <%= f.text_field :tag, class: 'form-control book_tag' %>
  </div>
  
  <% if book.id === nil %>
    <div class="form-group" id="star">
      <%= f.label :rrating %>
      <%= f.hidden_field :rationg, id: :review_star, class:'form-control' %>
    </div>
    <div id="post_raty" class ="mb-3"></div>
    <script>
      $(document).on('turbolinks:load', function() {
         $('#post_raty').empty();
        let elem = document.querySelector('#post_raty');
        let opt = {
          starOn: "<%= asset_path('rating/star-on.png') %>",
          starOff: "<%= asset_path('star-off.png') %>",
          starHalf: "<%= asset_path('star-half.png') %>",
          scoreName: 'book[rating]',
        };
        raty(elem,opt);
      });
    </script>
  <% else %>
    <%= render "books/rating", book: @book %>
  <% end %>
  <div class="form-group">
    <%= f.submit class: 'btn btn-success' %>
  </div>
<% end %>
